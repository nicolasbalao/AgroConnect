<Window x:Class="Software.Views.AdminAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software.Views"
        mc:Ignorable="d"
        Title="AdminAuth" Height="200" Width="300" Loaded="Window_Loaded" >
    <Grid>
        <!-- Content of your popup window -->
        <StackPanel Margin="10">
            <Label Content="Entrer le mot de passe" Style="{StaticResource MaterialDesignLabel}" FontSize="15"/>
            <PasswordBox x:Name="passwordBox"  Focusable="True" Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"/>
            <Button Content="Se connecter"  HorizontalAlignment="Center" Margin="0 20 0 0" Click="OnSubmit" />
        </StackPanel>
    </Grid>
</Window>
