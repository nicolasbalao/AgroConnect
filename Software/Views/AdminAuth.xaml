<Window x:Class="Software.Views.AdminAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software.Views"
        mc:Ignorable="d"
        Title="AdminAuth" Height="200" Width="300" >
    <Grid>
        <!-- Content of your popup window -->
        <StackPanel Margin="10">
            <TextBlock Text="Enter Password:"/>
            <PasswordBox x:Name="passwordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Submit"  HorizontalAlignment="Center" Margin="0 10" Click="OnSubmit"/>
        </StackPanel>
    </Grid>
</Window>
